{% if omlaio is defined %}
KAMAILIO_HOSTNAME=localhost
{% else %}
KAMAILIO_HOSTNAME={{ omni_ip_lan }}
{% endif %}

KAMAILIO_CERTS_LOCATION={{ certs_location }}
REDIS_HOSTNAME={{ redis_host }}
SHM_SIZE={{ shm_size }}
PKG_SIZE={{ pkg_size }}

{% if omnileads_ha is defined %}
ASTERISK_HOSTNAME={{ voice_host }}
ASTERISK_HOSTNAME_NODE_1={{ hostvars['voice_1'].omni_ip_lan }}
ASTERISK_HOSTNAME_NODE_2={{ hostvars['voice_2'].omni_ip_lan }}
RTPENGINE_HOSTNAME_NODE_1={{ hostvars['voice_1'].omni_ip_lan }}
RTPENGINE_HOSTNAME_NODE_2={{ hostvars['voice_2'].omni_ip_lan }}
{% else %}
RTPENGINE_HOSTNAME={{ rtpengine_host }}
ASTERISK_HOSTNAME={{ asterisk_host }}
{% endif %}