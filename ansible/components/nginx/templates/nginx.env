{% if ansible_os_family == "RedHat" %}
#!/bin/bash
{% endif %}

{% if django_host == "localhost" %}
DJANGO_HOSTNAME={{ omni_ip_lan }}
{% else %}
DJANGO_HOSTNAME={{ django_host }}
{% endif %}

KAMAILIO_HOSTNAME={{ kamailio_host }}
WEBSOCKETS_HOSTNAME={{ websocket_host }}
ENV={{ infra_env }}

{% if bucket_url is not defined %}
S3_ENDPOINT=http://{{ minio_host }}:9000
{% else %}
S3_ENDPOINT={{ bucket_url }}
{% endif %}

{% if ansible_os_family == "RedHat" %}
export DJANGO_HOSTNAME KAMAILIO_HOSTNAME WEBSOCKETS_HOSTNAME
{% endif %}
