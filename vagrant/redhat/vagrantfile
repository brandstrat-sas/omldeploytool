Vagrant.configure("2") do |config|
  config.env.enable
  config.vm.define "redhat" do |omnileads|
    omnileads.vm.box = "centos/7"
    omnileads.vm.hostname = "omnileads.testing"

    omnileads.vm.network "public_network", bridge: "en0: Wi-Fi (AirPort)"

    omnileads.vm.synced_folder "/Users/fpignataro/repos/omnileads/omldeploy/onpremise", "/opt"

    omnileads.vm.provision "shell", name: "prepare", inline: <<-END
      set -ex
      yum -y install git \
      curl \
      epel-release \
      python3 \
      python3-pip \
      ansible \
      awscli \
      podman \
    END


    omnileads.vm.provision "shell", name: "prepare", inline: <<-END
      set -ex
      cd /opt/onpremise
      bash -x deploy.sh --action=install --component=aio --infra=onpremise --iface=eth0
    END

    omnileads.vm.provider "virtualbox" do |vb|
      vb.name = "OML RedHat"
      vb.memory = "2048"
      vb.cpus = "2"
    end
  end
end
